%div.special_slider
  %ul.wrp.animate.spslider
    -special_slider.each do |special|
      -if special.single?
        - slide = special.items_volumes.first
        %li.elmnt{style: "background:url('#{special.image}');"}
          %div.special_box
            =link_to(item_link(slide.item), remote: false, class: 'special_link',
                                            data: {turbolinks: false, no_turbolinks: true}) do
              %div.img
                %img.item_thumb{src: slide.item.image.item_box}
              %div.text
                %div.name
                  = special.text
      - else
        %li.elmnt{style: "background:url('#{special.image}');"}
          = link_to("/shop/catalog?special=#{special.id}", class: 'special_link',
                                                           data: {turbolinks: false, no_turbolinks: true}) do
            %div.first_element
              %div.special_heading
                = special.text

