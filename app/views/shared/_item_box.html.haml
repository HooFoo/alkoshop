%div.item_box
  =link_to("/shop/template/item_about?item=#{item_box.id}", remote: true, class: 'item_about_link about') do
    %div.name
      = item_box.name
    %div.heading
      = item_box.heading
    %div.short_description
      = item_box.short_description
    %div.image
      %img.img{src: item_box.image.item_box}
    %div.price
      = item_box.show_price
  %div.sbutton
    =link_to("/cart/add?id=#{item_box.id}", remote:true, class: 'buy') do
      %p.sbutton_text
        В корзину